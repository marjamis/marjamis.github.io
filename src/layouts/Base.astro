---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

import { SITE_DESCRIPTION } from "../consts";

interface Props {
  title: string;
  heroImage?: string;
  rssFeedURL?: string;
}

const { title, heroImage, rssFeedURL } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={title} description={SITE_DESCRIPTION} />
    <style>
      main {
        width: 960px;
      }

      .title {
        margin: 0;
        color: rgb(var(--black));
        line-height: 1;
      }
      .date {
        margin: 0;
        color: rgb(var(--gray));
      }

      .hero-image {
        width: 100%;
      }
      .hero-image img {
        display: block;
        margin: 0 auto;
        border-radius: 12px;
        box-shadow: var(--box-shadow);
      }
      .prose {
        width: 720px;
        max-width: calc(100% - 2em);
        margin: auto;
        padding: 1em;
        color: rgb(var(--gray-dark));
      }

      .last-updated-on {
        font-style: italic;
      }
    </style>
  </head>
  <body>
    <Header />
    <main>
      {
        heroImage && (
          <div class="hero-image">
            <img width={1020} height={510} src={heroImage} alt="" />
          </div>
        )
      }
      <h1>{title} { rssFeedURL && ( <a href={rssFeedURL} target="_blank">
        <span class="sr-only">RSS Feed of Posts</span>
        <svg
          xmlns="http://www.w3.org/2000/svg"
          id="RSSicon"
          viewBox="0 0 8 8"
          width="32"
          height="32"
        >
          <style type="text/css">
            .button {
              stroke: none;
              fill: orange;
            }
            .symbol {
              stroke: none;
              fill: white;
            }
          </style>

          <rect class="button" width="8" height="8" rx="1.5"></rect>
          <circle class="symbol" cx="2" cy="6" r="1"></circle>
          <path
            class="symbol"
            d="m 1,4 a 3,3 0 0 1 3,3 h 1 a 4,4 0 0 0 -4,-4 z"></path>
          <path
            class="symbol"
            d="m 1,2 a 5,5 0 0 1 5,5 h 1 a 6,6 0 0 0 -6,-6 z"></path>
        </svg></a
      >)}</h1>
      <slot />
    </main>
    <Footer />
  </body>
</html>
